{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "types": ["node", "vitest", "chai"],
        "lib": ["ES2020", "dom"],
        "outDir": "./.ts-node-cache",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "noEmit": true
    },
    "include": [
        "test/**/*.spec.ts",
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
